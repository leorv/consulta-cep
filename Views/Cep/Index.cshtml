@model ConsultaCEP.Models.CEP
@using System.Text.RegularExpressions

@{
    ViewData["Title"] = "Consulta e Cadastro de CEP";

    string? erro = ViewBag.Erro;
    string? message = ViewBag.Message;

    string cepFormatado = string.IsNullOrEmpty(Model?.CepNumber) 
        ? "" 
        : Regex.Replace(Model.CepNumber, @"^(\d{5})(\d{3})$", "$1-$2");
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            
            <h1 class="text-center mb-4 text-primary">
                <i class="bi bi-geo-alt-fill"></i> Consulta Rápida de CEP
            </h1>

            <div class="card shadow-lg mb-5">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Buscar Endereço</h5>
                </div>
                <div class="card-body">
                    
                    <form method="get" asp-controller="Cep" asp-action="Index" class="needs-validation" novalidate>
                        <div class="input-group">
                            <input asp-for="CepNumber" id="cep-input" class="form-control form-control-lg" 
                                   placeholder="Digite o CEP (Ex: 12345-678)" maxlength="9" required>
                            
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-search"></i> Consultar
                            </button>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(erro))
                        {
                            <div class="text-danger mt-2">@erro</div>
                        }
                        @if (!string.IsNullOrEmpty(message))
                        {
                            <div class="text-warning mt-2">@message</div>
                        }
                        <span asp-validation-for="CepNumber" class="text-danger"></span>
                    </form>
                    
                    <hr class="my-4">

                    <div class="text-center">
                        <a class="btn btn-outline-primary" asp-action="Create">
                            <i class="bi bi-plus-circle"></i> Inserir Novo CEP Manualmente
                        </a>
                        <a class="btn btn-outline-info ms-2" asp-action="CepsByUf">
                            <i class="bi bi-list-columns-reverse"></i> Listar por UF
                        </a>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model?.CepNumber))
            {
                <div class="card border-success shadow-lg">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Resultado da Consulta</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4"><i class="bi bi-tag-fill"></i> CEP:</dt>
                            <dd class="col-sm-8"><strong>@cepFormatado</strong></dd>

                            <dt class="col-sm-4"><i class="bi bi-house-door-fill"></i> Logradouro:</dt>
                            <dd class="col-sm-8">@Model.Logradouro</dd>
                            
                            @if (!string.IsNullOrEmpty(Model.Complemento))
                            {
                                <dt class="col-sm-4"><i class="bi bi-info-circle-fill"></i> Complemento:</dt>
                                <dd class="col-sm-8">@Model.Complemento</dd>
                            }

                            <dt class="col-sm-4"><i class="bi bi-signpost-fill"></i> Bairro:</dt>
                            <dd class="col-sm-8">@Model.Bairro</dd>

                            <dt class="col-sm-4"><i class="bi bi-building-fill"></i> Cidade/UF:</dt>
                            <dd class="col-sm-8">@Model.Localidade - @Model.Uf</dd>
                        </dl>
                        
                        <div class="mt-3">
                            <small class="text-muted">Dados fornecidos pelo sistema ou ViaCEP.</small>
                        </div>
                    </div>
                </div>
            }

            else if (Model != null && !string.IsNullOrEmpty(Model.CepNumber) && !string.IsNullOrEmpty(message))
            {
                 <div class="alert alert-danger mt-4" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> Erro ao processar o CEP @Model.CepNumber. Por favor, verifique se está correto.
                 </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    @{
        // Isso garante que as validações do ASP.NET Core funcionem
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $('#cep-input').mask('00000-000');
            $('form').submit(function() {
                var cepValue = $('#cep-input').val().replace('-', '');
                $('#cep-input').val(cepValue);
            });
        });
    </script>
}